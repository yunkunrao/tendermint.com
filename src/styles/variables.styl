//==============================================================================
// variables

:root
  // change for dark/light themes
  --app-fg #eee
  --app-bg #fff
  --app-bg-alpha hsla(0, 0%, 100%, 95%)
  --bright #000
  --txt #333
  --dim #666
  --bc #ddd
  --bc-dim #eee
  --hover-bg hsl(233, 43%, 10%)
  --input-bc #ccc
  --input-bc-hover hsl(233, 22%, 40%)
  // change for rebranding
  --mc hsl(210, 70%, 18%)
  --accent hsl(229, 96%, 62%)
  --primary hsl(210, 52%, 55%)
  --primary-bc hsl(210, 52%, 48%)
  --link hsl(210, 90%, 50%)
  --hover hsl(210, 90%, 60%)
  // don't change
  --input-bg transparent
  --success hsl(120,58%,55%)
  --success-bc hsl(120,58%,41%)
  --warning hsl(52,73%,50%)
  --warning-bc hsl(52,73%,38%)
  --danger hsl(0,100%,55%)
  --danger-bc hsl(0,100%,41%)

// typography
x = 16px
px = 0.0625rem
sans = -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif
mono = Consolas, Monaco, monospace

// sizes
aw = 64rem
width-main = 100%
width-side = 16rem
bw = 3*px

//==============================================================================
// methods

df()
  font-size x
  line-height 1.5
  font-family sans
  color txt

mono()
  font-family Consolas, Monaco, monospace
  font-weight normal

shadow()
  box-shadow hsla(0,0,0,0.1) 0 0.125rem 0.375rem

xl = x * 1.5
lg = x * 1.25
m = x
sm = x * 0.75
xs = x * 0.625

h1 = 2.25rem
h2 = 1.75rem
h3 = 1.5rem
h4 = 1.25rem
h5 = 1.125rem
h6 = 0.75rem

//==============================================================================
// z-index

z-layers = {
  modalTop: 1002,
  modalHelp: 1001,
  modal: 1000,
  appHeader: 100,
  appMenu: 99,
  toolBar: 98,
  listItem: 10,
  default: 1,
  zero: 0,
  below: -1
}

z(layer)
  z-layers[layer]
